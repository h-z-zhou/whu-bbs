<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuda.bbs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.BBSApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BBS">
        <activity
            android:name=".ui.drawer.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.article.ReplyActivity"
            android:exported="false"
            android:theme="@style/Theme.BBS.ReplyDialog" />
        <activity
            android:name=".ui.main.board.BoardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.article.PostArticleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.MyInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.drawer.FavArticleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.drawer.TreasureBoxActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.mail.MailContentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.UserInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.board.FavorBoardManagerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.article.DetailArticleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>