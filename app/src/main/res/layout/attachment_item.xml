<?xml version="1.0" encoding="utf-8"?>
<com.wuda.bbs.ui.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attachment_background_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mimetype_image" />

    <TextView
        android:id="@+id/attachment_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attachment_background_imageView"
        android:gravity="center"
        android:textSize="12sp" />
</com.wuda.bbs.ui.widget.SquareRelativeLayout>