<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_avatar_imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_face" />

    <TextView
        android:id="@+id/friend_id_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="zhuzi"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/friend_avatar_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend_avatar_imageView"
        app:layout_constraintTop_toTopOf="@+id/friend_avatar_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>