<?xml version="1.0" encoding="utf-8"?>
<com.wuda.bbs.ui.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selectedAttachment_content_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_add_photo" />

    <ImageView
        android:id="@+id/selectedAttachment_delete_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:alpha="0.8"
        app:srcCompat="@drawable/ic_remove_item" />

</com.wuda.bbs.ui.widget.SquareRelativeLayout>