<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.RegisterFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_uid_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:counterMaxLength="12"
                app:helperText="* 2-12字符, 可用英文字母或数字，首字符必须是字母">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_uid_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="用户名" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_password_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:counterMaxLength="39"
                app:endIconMode="password_toggle"
                app:helperText="* 4-39字符">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_password2_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterMaxLength="29"
                app:endIconMode="password_toggle"
                app:helperText="* 4-39字符, 必须和密码一致">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password2_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="确认密码"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_nickname_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:counterMaxLength="39"
                app:helperText="(可选)2-39字符, 中英文不限">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_nickname_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="昵称" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_realName_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:counterMaxLength="39"
                app:helperText="* 至少两汉字">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_realName_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="真实姓名" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_campusId_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:helperText="* 在校生填写学号；在职教职工填写工号；已毕业校友填写毕业证编号或学位证编号。如填写错误将影响实名认证">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_campusId_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="学号/工号/毕业证或学位证编号" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_idNumber_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:helperText="* 请填写真实的身份证号，否则将不予通过人工审核">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_idNumber_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="身份证号" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_birthday_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:helperText="(可选，双击)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_birthday_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="出生年/月/日" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_email_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:helperText="* 如填写错误将收不到实名认证通过的邮件">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_email_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email " />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_phoneNumber_textInputLayout"
                style="@style/Widget.BBS.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:helperText="*">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_phoneNumber_inputTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="联络电话" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="性别" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/register_gender_man_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/register_gender_woman_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女" />
            </RadioGroup>

            <Button
                android:id="@+id/register_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>