<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserInfoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drawer_nav_bar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userInfo_avatar_imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_face" />

    <TextView
        android:id="@+id/userInfo_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="zhuzi( 柱子 )"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/userInfo_avatar_imageView"
        app:layout_constraintStart_toEndOf="@+id/userInfo_avatar_imageView"
        app:layout_constraintTop_toTopOf="@+id/userInfo_avatar_imageView" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:paddingBottom="64dp">

            <TextView
                android:id="@+id/userInfo_level_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_class"
                android:drawablePadding="8dp"
                android:drawableTint="#3F51B5"
                android:text="等级："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userInfo_exp_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_up"
                android:drawablePadding="8dp"
                android:drawableTint="#FFC107"
                android:text="经验："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userInfo_postNum_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_chart"
                android:drawablePadding="8dp"
                android:drawableTint="#8BC34A"
                android:text="帖子数："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userInfo_signature_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:drawableTint="#03A9F4"
                android:text="个性签名："
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_text_snippet" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/userInfo_add2friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="加为好友"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userInfo_chat_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/userInfo_chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="信件聊天"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userInfo_add2friend_button" />
</androidx.constraintlayout.widget.ConstraintLayout>